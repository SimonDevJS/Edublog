---
import Layout from "./Layout.astro";

const { title, description, author, date, category } = Astro.props;

// Ensure date is properly parsed as Date object
const dateObj = date instanceof Date ? date : new Date(date);
const formattedDate = new Intl.DateTimeFormat("es-ES", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(dateObj);
---

<Layout title={`${title} - EduBlog`} description={description}>
  <article class="post">
    <div class="container">
      <header class="post-header">
        <div class="post-meta">
          <span class="category">{category}</span>
          <span class="date">{formattedDate}</span>
        </div>
        <h1 class="post-title">{title}</h1>
        <p class="post-description">{description}</p>
        <div class="author">Por {author}</div>
      </header>

      <div class="post-content">
        <slot />
      </div>

      <footer class="post-footer">
        <a href="/" class="back-link">‚Üê Volver al inicio</a>
      </footer>
    </div>
  </article>

  <style>
    .post {
      padding: var(--spacing-2xl) 0;
    }

    .post-header {
      max-width: 800px;
      margin: 0 auto var(--spacing-2xl);
      text-align: center;
    }

    .post-meta {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: var(--spacing-md);
      margin-bottom: var(--spacing-md);
      font-size: 0.9rem;
    }

    .category {
      background-color: var(--color-primary);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 4px;
      font-weight: 500;
      text-transform: uppercase;
      font-size: 0.75rem;
      letter-spacing: 0.5px;
    }

    .date {
      color: var(--color-text-muted);
    }

    .post-title {
      font-size: 2.5rem;
      margin-bottom: var(--spacing-sm);
      line-height: 1.1;
    }

    .post-description {
      font-size: 1.25rem;
      color: var(--color-text-muted);
      margin-bottom: var(--spacing-md);
      line-height: 1.5;
    }

    .author {
      font-style: italic;
      color: var(--color-text-muted);
    }

    .post-content {
      max-width: 800px;
      margin: 0 auto;
      font-family: var(--font-serif);
      font-size: 1.125rem;
      line-height: 1.8;
    }

    .post-content :global(h2) {
      font-size: 2rem;
      margin-top: var(--spacing-xl);
      margin-bottom: var(--spacing-md);
    }

    .post-content :global(h3) {
      font-size: 1.5rem;
      margin-top: var(--spacing-lg);
      margin-bottom: var(--spacing-sm);
    }

    .post-content :global(p) {
      margin-bottom: var(--spacing-md);
    }

    .post-content :global(ul),
    .post-content :global(ol) {
      margin-bottom: var(--spacing-md);
      padding-left: var(--spacing-lg);
    }

    .post-content :global(li) {
      margin-bottom: var(--spacing-xs);
    }

    .post-content :global(blockquote) {
      border-left: 4px solid var(--color-accent);
      padding-left: var(--spacing-md);
      margin: var(--spacing-lg) 0;
      font-style: italic;
      color: var(--color-text-muted);
    }

    .post-content :global(code) {
      background-color: var(--color-primary-dark);
      color: #f8f8f2;
      padding: 0.2rem 0.4rem;
      border-radius: 3px;
      font-size: 0.9em;
      font-family: "Courier New", monospace;
    }

    .post-content :global(pre) {
      background-color: var(--color-primary-dark);
      padding: var(--spacing-md);
      border-radius: 8px;
      overflow-x: auto;
      margin: var(--spacing-lg) 0;
    }

    .post-content :global(pre code) {
      background-color: transparent;
      padding: 0;
    }

    .post-footer {
      max-width: 800px;
      margin: var(--spacing-2xl) auto 0;
      padding-top: var(--spacing-lg);
      border-top: 1px solid var(--color-border);
    }

    .back-link {
      font-weight: 500;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    @media (max-width: 768px) {
      .post-title {
        font-size: 2rem;
      }

      .post-description {
        font-size: 1.1rem;
      }

      .post-content {
        font-size: 1rem;
      }
    }
  </style>
</Layout>
