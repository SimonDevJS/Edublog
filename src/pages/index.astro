---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { BlogPost } from "../content/config";
import "../styles/global.css";

const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (
    a: {
      slug: string;
      data: BlogPost;
      render: () => Promise<{ Content: any }>;
    },
    b: { slug: string; data: BlogPost; render: () => Promise<{ Content: any }> }
  ) => b.data.date.getTime() - a.data.date.getTime()
);
---

<Layout title="EduBlog - Blog Académico">
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">EduBlog</h1>
      <p class="hero-subtitle">
        Un espacio para compartir conocimiento, reflexiones académicas y
        recursos educativos
      </p>
    </div>
  </section>

  <section class="posts-section">
    <div class="container">
      <h2 class="section-title">Artículos Recientes</h2>

      <div class="posts-grid">
        {
          sortedPosts.map((post: any) => {
            const formattedDate = new Intl.DateTimeFormat("es-ES", {
              year: "numeric",
              month: "long",
              day: "numeric",
            }).format(post.data.date);

            return (
              <article class="post-card">
                <div class="post-card-header">
                  <span class="post-category">{post.data.category}</span>
                  <span class="post-date">{formattedDate}</span>
                </div>
                <h3 class="post-card-title">
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h3>
                <p class="post-card-description">{post.data.description}</p>
                <div class="post-card-footer">
                  <span class="post-author">Por {post.data.author}</span>
                  <a href={`/blog/${post.slug}`} class="read-more">
                    Leer más →
                  </a>
                </div>
              </article>
            );
          })
        }
      </div>
    </div>
  </section>

  <style>
    .hero {
      background: linear-gradient(
        135deg,
        var(--color-primary) 0%,
        var(--color-primary-dark) 100%
      );
      color: white;
      padding: var(--spacing-2xl) 0;
      text-align: center;
      margin-bottom: var(--spacing-2xl);
    }

    .hero-title {
      font-size: 3.5rem;
      margin-bottom: var(--spacing-md);
      color: white;
      position: relative;
      display: inline-block;
    }

    .hero-title::after {
      content: "";
      position: absolute;
      bottom: -8px;
      left: 50%;
      transform: translateX(-50%);
      width: 60%;
      height: 4px;
      background-color: var(--color-accent);
    }

    .hero-subtitle {
      font-size: 1.25rem;
      max-width: 700px;
      margin: var(--spacing-lg) auto 0;
      opacity: 0.95;
      line-height: 1.6;
    }

    .posts-section {
      padding: var(--spacing-xl) 0;
    }

    .section-title {
      font-size: 2rem;
      margin-bottom: var(--spacing-xl);
      text-align: center;
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: var(--spacing-lg);
    }

    .post-card {
      background-color: var(--color-surface);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      padding: var(--spacing-lg);
      transition:
        transform 0.2s ease,
        box-shadow 0.2s ease;
    }

    .post-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .post-card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--spacing-md);
      font-size: 0.85rem;
    }

    .post-category {
      background-color: var(--color-primary);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: 4px;
      font-weight: 500;
      text-transform: uppercase;
      font-size: 0.7rem;
      letter-spacing: 0.5px;
    }

    .post-date {
      color: var(--color-text-muted);
    }

    .post-card-title {
      font-size: 1.5rem;
      margin-bottom: var(--spacing-sm);
      line-height: 1.3;
    }

    .post-card-title a {
      color: var(--color-primary-dark);
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .post-card-title a:hover {
      color: var(--color-accent);
    }

    .post-card-description {
      color: var(--color-text-muted);
      margin-bottom: var(--spacing-md);
      line-height: 1.6;
    }

    .post-card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: var(--spacing-sm);
      border-top: 1px solid var(--color-border);
    }

    .post-author {
      font-size: 0.9rem;
      color: var(--color-text-muted);
      font-style: italic;
    }

    .read-more {
      font-weight: 500;
      color: var(--color-primary);
      transition: color 0.2s ease;
    }

    .read-more:hover {
      color: var(--color-accent);
    }

    @media (max-width: 768px) {
      .hero-title {
        font-size: 2.5rem;
      }

      .hero-subtitle {
        font-size: 1.1rem;
      }

      .posts-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</Layout>
